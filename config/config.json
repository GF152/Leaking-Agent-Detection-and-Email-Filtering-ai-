{
  "system": {
    "name": "Leaking Agent Detection System",
    "version": "1.0.0",
    "debug": false
  },
  "email_filtering": {
    "spam_threshold": 0.6,
    "phishing_threshold": 0.7,
    "malware_threshold": 0.8,
    "use_bert_model": true,
    "model_path": "models/",
    "max_email_size": "10MB"
  },
  "behavioral_analysis": {
    "anomaly_threshold": 0.7,
    "learning_rate": 0.01,
    "baseline_update_frequency": "daily",
    "risk_score_weights": {
      "time_anomaly": 0.2,
      "volume_anomaly": 0.25,
      "access_pattern_anomaly": 0.2,
      "data_movement_anomaly": 0.35
    }
  },
  "database": {
    "type": "sqlite",
    "path": "data/system.db",
    "backup_frequency": "daily"
  },
  "logging": {
    "level": "INFO",
    "file": "logs/system.log",
    "max_size": "100MB",
    "backup_count": 5
  }
}